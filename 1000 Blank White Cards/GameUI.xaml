<Page x:Class="_1000_Blank_White_Cards.GameUI"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_1000_Blank_White_Cards"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GameUI" Height="420" Width="700">
    <Viewbox StretchDirection="Both" Stretch="Uniform">
        <Grid x:Name="GameUIGrid" Height="420" Width="700">
            <Rectangle Fill="White"/>
            <Image x:Name="Background" Source="otherImages/GameUI Background.jpg" Stretch="Fill" VerticalAlignment="Center" Height="420"/>
            <Button x:Name="backButton" Content="Leave Game" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="ClimbLadder"/>
            <Button Name="DrawCard" Margin="568,55,36,235" Click="summonDeckCard" MouseEnter="DrawCard_MouseEnter" RenderSize="96,130" MouseLeave="DrawCard_MouseLeave">
                <Image x:Name="DrawDeckImage" Source="cards\cardback print.jpg"/>
            </Button>
            <Image x:Name="discardPile" Source="cards\cardback print.jpg" Margin="450,55,154,235"/>
        </Grid>
    </Viewbox>
</Page>
